{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "paths": {
      "*": ["*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
}
